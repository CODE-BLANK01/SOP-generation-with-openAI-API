<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SOP FORM</title>
    <link rel="stylesheet" href="/css/form.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="sopcontainer">
      <h1 class="title">Customised SOP Generation Form</h1>
      <form action="/submit" method="POST">
        <!-- Section 1: Personal Information -->
        <fieldset class="form-section" id="section1">
          <legend>Personal Information</legend>
          <div class="form-group">
            <label for="email">Email *</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="Your Email"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="fullName">Full Name *</label>
            <input
              type="text"
              id="fullName"
              name="fullName"
              required
              placeholder="Your Full Name"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="age">Age *</label>
            <input
              type="number"
              id="age"
              name="age"
              required
              placeholder="Your Age"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="education">Highest Level of Education *</label>
            <input
              type="text"
              id="education"
              name="education"
              required
              placeholder="Your Education"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="institute"
              >Institute where you completed your highest level of education
              *</label
            >
            <input
              type="text"
              id="institute"
              name="institute"
              required
              placeholder="Your Institute"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="study">What did you study *</label>
            <input
              type="text"
              id="study"
              name="study"
              required
              placeholder="Your Field of Study"
              class="form-control"
            />
          </div>
          <button type="button" class="next-button px-4" data-next="section2">
            Next
          </button>
        </fieldset>

        <!-- Section 2: Work Experience -->
        <fieldset class="form-section" id="section2">
          <legend>Work Experience</legend>
          <div class="form-group">
            <label for="workExperience"
              >Do you have any relevant work experience?</label
            >
            <input
              type="text"
              id="workExperience"
              name="workExperience"
              placeholder="Write None if no work experience"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="jobTitle">Job Title</label>
            <input
              type="text"
              id="jobTitle"
              name="jobTitle"
              placeholder="Your Job Title"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="companyName">Company Name</label>
            <input
              type="text"
              id="companyName"
              name="companyName"
              placeholder="Your Company Name"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="jobDuties">Job Duties</label>
            <textarea
              id="jobDuties"
              name="jobDuties"
              placeholder="Describe your job duties"
              class="form-control"
            ></textarea>
          </div>

          <button type="button" class="prev-button" data-prev="section1">
            Previous
          </button>
          <button type="button" class="next-button px-4" data-next="section3">
            Next
          </button>
        </fieldset>

        <!-- Section 3: Admission in Canada -->
        <fieldset class="form-section" id="section3">
          <legend>Admission in Canada</legend>
          <div class="form-group">
            <label for="admittedInCanada"
              >What institute did you get admitted to in Canada? *</label
            >
            <input
              type="text"
              id="admittedInCanada"
              name="admittedInCanada"
              required
              placeholder="Admitted Institute in Canada"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="programOfStudy"
              >What is your program of study in Canada? *</label
            >
            <input
              type="text"
              id="programOfStudy"
              name="programOfStudy"
              required
              placeholder="Your Program of Study in Canada"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="applyingFromCountry"
              >Which country are you applying from? *</label
            >
            <input
              type="text"
              id="applyingFromCountry"
              name="applyingFromCountry"
              required
              placeholder="Applying Country"
              class="form-control"
            />
          </div>
          <button type="button" class="prev-button" data-prev="section2">
            Previous
          </button>
          <button type="button" class="next-button px-4" data-next="section4">
            Next
          </button>
        </fieldset>

        <!-- Section 4: Future Goals -->
        <fieldset class="form-section" id="section4">
          <legend>Future Goals</legend>
          <div class="form-group">
            <label for="futureGoals">What are your future goals? *</label>
            <textarea
              id="futureGoals"
              name="futureGoals"
              required
              placeholder="Your Future Goals"
              class="form-control"
            ></textarea>
          </div>
          <button type="button" class="prev-button" data-prev="section3">
            Previous
          </button>
          <button type="button" class="next-button px-4" data-next="section5">
            Next
          </button>
        </fieldset>

        <!-- Section 5: English Scores -->
        <fieldset class="form-section" id="section5">
          <legend>English Scores</legend>
          <div class="form-group">
            <label for="listeningScore">English Scores - Listening *</label>
            <input
              type="number"
              id="listeningScore"
              name="listeningScore"
              maxlength="10"
              required
              placeholder="Listening Score"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="readingScore">English Scores - Reading *</label>
            <input
              type="number"
              id="readingScore"
              name="readingScore"
              max="10"
              required
              placeholder="Reading Score"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="speakingScore">English Scores - Speaking *</label>
            <input
              type="number"
              id="speakingScore"
              name="speakingScore"
              maxlength="10"
              required
              placeholder="Speaking Score"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="writingScore">English Scores - Writing *</label>
            <input
              type="number"
              id="writingScore"
              name="writingScore"
              maxlength="10"
              required
              placeholder="Writing Score"
              class="form-control"
            />
          </div>
          <button type="button" class="prev-button" data-prev="section4">
            Previous
          </button>
          <button type="button" class="next-button px-4" data-next="section6">
            Next
          </button>
        </fieldset>

        <!-- Section 6: Tuition and GIC -->
        <fieldset class="form-section" id="section6">
          <legend>Tuition and GIC</legend>
          <div class="form-group">
            <label for="paidTuition"
              >Did you pay your first-year tuition? *</label
            >
            <select
              id="paidTuition"
              name="paidTuition"
              required
              class="form-control"
            >
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
          <div class="form-group">
            <label for="tuitionAmount">How much tuition fee did you pay?</label>
            <input
              type="number"
              id="tuitionAmount"
              name="tuitionAmount"
              placeholder="Tuition Fee Amount"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="paidGIC">Did you do a GIC?</label>
            <select id="paidGIC" name="paidGIC" class="form-control">
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
          <div class="form-group">
            <label for="gicAmount">How much did you pay towards GIC?</label>
            <input
              type="number"
              id="gicAmount"
              name="gicAmount"
              placeholder="GIC Amount"
              class="form-control"
            />
          </div>
          <button type="button" class="prev-button" data-prev="section5">
            Previous
          </button>
          <button type="submit" class="submit-button">Submit</button>
        </fieldset>
      </form>
    </div>
    <script src="/scripts/formScript.js"></script>
  </body>
</html>
